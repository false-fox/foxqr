---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout title="foxqr">
  <script>
    import QRCode from "qrcode";
    //@ts-ignore
    let ErrorCorrection: HTMLSelectElement =
      document.getElementById("errorCorrection");
    //@ts-ignore
    let i: HTMLImageElement = document.getElementById("codeContainer");
    //@ts-ignore
    let textinput: HTMLInputElement = document.getElementById("textinput");
    //@ts-ignore
    let marginInput: HTMLInputElement = document.getElementById("margin");
    //@ts-ignore
    let colorDark: HTMLInputElement = document.getElementById("colorDark");
    //@ts-ignore
    let colorLight: HTMLInputElement = document.getElementById("colorLight");
    //@ts-ignore
    let resolution: HTMLInputElement = document.getElementById("resolution");
    //@ts-ignore
    let a: HTMLAnchorElement = document.getElementById("a");

    let elements = document.querySelectorAll(".input");
    elements.forEach((element) => {
      element.addEventListener("input", () => generateCode(textinput.value));
    });

    function generateCode(data: string) {
      if (!data.trim().length) {
        i.src = "/blankwhitesquare.png";
        return;
      }
      QRCode.toDataURL(data, {
        margin: marginInput.value,
        width: resolution.value,
        errorCorrectionLevel: ErrorCorrection.value,
        color: {
          dark: colorDark.value,
          light: colorLight.value,
        },
      })
        .then((url) => {
          i.src = url;
          a.href = url;
		  let timestamp = `${Date.now()}`
		  //@ts-ignore
          a.download = "foxqr-" + data + "-" + timestamp.slice(timestamp.length - 5);
        })
        .catch((err) => {
          console.error(err);
        });
    }
  </script>
  <main>
    <div id="container">
      <div id="header">
        <h1>foxqr</h1>
        <p>
          a no fuss, public domain, qr generator by <a
            target="_blank"
            href="https://falsefox.dev">falsefox</a
          >
        </p>
      </div>
      <div id="content">
        <input
          class="input"
          type="text"
          id="textinput"
          placeholder="Hello World!"
        /><br />
        <a id="a" download="">
          <img id="codeContainer" src="/blankwhitesquare.png" />
        </a>
        <h1>Options</h1>
        <div id="options">
          <div>
            <label for="errorCorrection">Error Correction</label>
            <select class="input" name="errorCorrection" id="errorCorrection">
              <option selected="selected" value="L">Low (~7%)</option>
              <option value="M">Medium (~15%)</option>
              <option value="Q">Quartile (~25%)</option>
              <option value="H">High (~30%)</option>
            </select>
          </div>
          <div>
            <label for="margin">Margin</label>
            <input
              class="input"
              min="0"
              max="50"
              type="number"
              value="2"
              name="margin"
              id="margin"
            />
          </div>
          <div>
            <label for="colorLight">Light Color</label>
            <input
              class="input"
              type="color"
              name="colorLight"
              value="#FFFFFF"
              id="colorLight"
            />
            <label for="colorLight">Dark Color</label>
            <input class="input" type="color" value="#000000" id="colorDark" />
          </div>
          <div>
            <label for="resolution">Resolution</label>
            <input
              class="input"
              min="1"
              max="1024"
              type="number"
              value="512"
              name="resolution"
              id="resolution"
            />
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>
<style lang="less">


  #options {
    display: flex;
    flex-direction: column;
    row-gap: 1em;
  }
  main {
    display: flex;
    width: 100%;
    justify-content: center;
    align-items: center;
  }
  #textinput {
    width: 100%;
  }
  #margin,
  #resolution {
    max-width: 4em;
  }

  #errorCorrection {
    max-width: 9em;
  }

  input,
  .input,
  select {
    font-size: 1em;
    padding: 0.2em;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
    border: 2px solid black;
    box-shadow: 2px 2px grey;
  }

  #codeContainer {
    margin-top: 1em;
    width: 325px;
    border: 2px solid black;
    box-shadow: 2px 2px grey;
  }
  #content {
    max-width: 20em;
    display: flex;
    flex-direction: column;
  }
  #header {
    h1 {
      margin-bottom: 0px;
    }
    p {
      margin-top: 0px;
    }
  }
</style>
